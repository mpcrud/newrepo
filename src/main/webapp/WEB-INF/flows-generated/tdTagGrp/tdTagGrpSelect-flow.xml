<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract">
	<!-- note: this flow inherits from the 'abstract' flow -->

	<persistence-context />

	<var name="tdTagGrpLazyDataModel" class="com.app.mpadmin.web.domain.TdTagGrpLazyDataModel" />

	<decision-state id="selectChoice">
		<if test="create" then="edit" />
		<if test="sub" then="tdTagGrpSubSelect" else="tdTagGrpSelect" />
	</decision-state>

	<view-state id="tdTagGrpSelect">
		<on-entry>
			<evaluate expression="messageUtil.displayDelayedMessages()" />
			<evaluate expression="persistenceContext.clear()" />
		</on-entry>
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,'select')" />
		</on-render>
		<transition on="select" to="checkIfAlreadyOpenFlow" validate="false"/>
		<transition on="delete" validate="false">
			<evaluate expression="tdTagGrpController.delete(tdTagGrpLazyDataModel.selectedRow)" />
            <evaluate expression="tdTagGrpLazyDataModel.clearSelected()"/>
		</transition>
		<transition on="sendNew" to="edit" validate="false" />
	</view-state>

	<view-state id="tdTagGrpSubSelect" view="tdTagGrpSelect.xhtml">
		<transition on="select" to="tdTagGrpSelected" validate="false"/>
	</view-state>

	<decision-state id="checkIfAlreadyOpenFlow">
		<if test="flowsMenuHandler.isFlowAlreadyOpen(flowRequestContext,tdTagGrpLazyDataModel.selectedRow)" 
			then="endSwitchToAlreadyOpenFlow"
			else="edit" />
	</decision-state>

	<subflow-state id="edit" subflow="tdTagGrp/edit">
		<input name="tdTagGrp" value="tdTagGrpLazyDataModel.selectedRow" />
		<transition on="endEdit" to="quitChoice" >
            <evaluate expression="tdTagGrpLazyDataModel.clearSelected()"/>
        </transition>
		<transition on="deleteAndClose" to="tdTagGrpSelect" >
            <evaluate expression="tdTagGrpLazyDataModel.clearSelected()"/>
        </transition>
	</subflow-state>

	<decision-state id="quitChoice">
		<if test="create" then="quit" else="tdTagGrpSelect"/>
	</decision-state>

    <end-state id="quit" view="/WEB-INF/views/home.xhtml">
		<on-entry>
			<evaluate expression="messageUtil.displayDelayedMessages()" />
            <evaluate expression="tdTagGrpSearchForm.topicSelector.clearSelected()"/>
            <evaluate expression="tdTagGrpSearchForm.productSelector.clearSelected()"/>
		</on-entry>
	</end-state>


	<end-state id="endSwitchToAlreadyOpenFlow"
		view="externalRedirect:contextRelative:#{flowsMenuHandler.endStateRedirectToAlreadyOpenFlow(flowRequestContext,tdTagGrpLazyDataModel.selectedRow)}" />

	<end-state id="tdTagGrpSelected">
		<output name="tdTagGrpSelected" value="tdTagGrpLazyDataModel.selectedRow" />
	</end-state>

	<global-transitions>
		<transition on="search">
			<evaluate expression="tdTagGrpLazyDataModel.onSearch()" />
		</transition>
	</global-transitions>

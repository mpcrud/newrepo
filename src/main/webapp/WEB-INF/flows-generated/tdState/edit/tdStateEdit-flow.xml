<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdState: the entity to edit. If null, then we create it here -->
	<input name="tdState" required="false" value="flowScope.tdState"/>	
	<on-start>
		<evaluate expression="tdStateController.newIfNull(tdState)" result="flowScope.tdState" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdStateSubEdit" else="tdStateEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdStateEdit" parent="#tdStateEditCommon">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdState.id,tdStateConverter.print(tdState))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdStateController.save(tdState)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdStateController.saveAndClose(tdState)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdState)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdStateController.delete(tdState)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdStateSubEdit" view="tdStateEdit.xhtml" parent="#tdStateEditCommon">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<!-- COMMON-EDIT -->
	<view-state id="tdStateEditCommon">

		<!-- country transitions (x-to-one) -->
		<transition on="selectCountry" to="selectCountry" />
		<transition on="editCountry" to="editCountry">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewCountry" to="editCountry">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
	</view-state>

	<!-- SUBFLOW country (x-to-one) -->
	<subflow-state id="selectCountry" subflow="tdCountry">
		<input name="sub" value="true" />
		<transition on="tdCountrySelected" to="startChoice">
			<evaluate expression="tdState.setCountry(currentEvent.attributes.tdCountrySelected)" />
			<evaluate expression="messageUtil.info('status_selected_ok',resourceBundle.tdState_country)" />
		</transition>
		<transition on="cancel" to="startChoice" />
	</subflow-state>
	<subflow-state id="editCountry" subflow="tdCountry/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="tdCountry" value="tdState.country" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.tdState_country)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>

	<end-state id="endEdit">
		<output name="tdState" value="tdState" />
	</end-state>
</flow>
	<subflow-state id="edit" subflow="tdRequestCarPart/edit">
		<input name="tdRequestCarPart" value="tdRequestCarPartLazyDataModel.selectedRow" />
		<transition on="endEdit" to="quitChoice" />
		<transition on="deleteAndClose" to="tdRequestCarPartSelect" />
	</subflow-state>

	<decision-state id="quitChoice">
		<if test="create" then="quit" else="tdRequestCarPartSelect"/>
	</decision-state>


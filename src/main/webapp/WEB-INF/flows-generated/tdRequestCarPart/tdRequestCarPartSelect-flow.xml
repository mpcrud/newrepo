    <input name="editor" required="false" value="flowScope.editor" type="com.app.mpadmin.domain.Editor"/>

	<decision-state id="selectChoice">
		<if test="create" then="edit" />
		<if test="sub" then="tdRequestCarPartSubSelect" else="tdRequestCarPartSelect" />
	</decision-state>

	<view-state id="tdRequestCarPartSelect">
		<on-entry>
			<evaluate expression="messageUtil.displayDelayedMessages()" />
			<evaluate expression="persistenceContext.clear()" />
            <evaluate expression="editorController.newIfNull(editor)" result="flowScope.editor" result-type="com.app.mpadmin.domain.Editor"/>
		</on-entry>
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,'select')" />
		</on-render>
		<transition on="select" to="checkIfAlreadyOpenFlow" validate="false"/>
		<transition on="delete" validate="false">
			<evaluate expression="tdRequestCarPartController.delete(tdRequestCarPartLazyDataModel.selectedRow)" />
		</transition>
		<transition on="sendNew" to="edit" validate="false" />
        <transition on="updateAll">
            <evaluate expression="tdRequestCarPartController.updateStatus(tdRequestCarPartLazyDataModel.selectedList)"/>
            <evaluate expression="primeFacesUtil.refresh()"/>
        </transition>
        <transition on="deleteAll">
            <evaluate expression="tdRequestCarPartController.deleteAll(tdRequestCarPartLazyDataModel.selectedList)"/>
            <evaluate expression="primeFacesUtil.refresh()"/>
        </transition>
        <transition on="sendEmail" to="sendemail" validate="false">
          <evaluate expression="tdRequestCarPartLazyDataModel.emailList()" result="flowScope.eList" result-type="java.util.List"/>
          <evaluate expression="editor.setEmail(eList)"/>
        </transition>
        </view-state>

	<view-state id="tdRequestCarPartSubSelect" view="tdRequestCarPartSelect.xhtml">
		<transition on="select" to="tdRequestCarPartSelected" validate="false"/>
	</view-state>

	<decision-state id="checkIfAlreadyOpenFlow">
		<if test="flowsMenuHandler.isFlowAlreadyOpen(flowRequestContext,tdRequestCarPartLazyDataModel.selectedRow)" 
			then="endSwitchToAlreadyOpenFlow"
			else="edit" />
	</decision-state>


   <view-state id="sendemail" view="/WEB-INF/flows/sendMail/sendMail.xhtml" model="flowscope.editor" >
       <on-entry>
    		<set name="editor" value="flowScope.editor" type="com.app.mpadmin.domain.Editor"/>
       </on-entry>
       <transition on="submitMail" to="mailSent">
             <evaluate expression="editorController.sendMail(tdRequestCarPart)"/>
       </transition>
       <transition on="cancel" to="mailSent"/>
   </view-state>



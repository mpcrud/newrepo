<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdCountry: the entity to edit. If null, then we create it here -->
	<input name="tdCountry" required="false" value="flowScope.tdCountry"/>	
	<on-start>
		<evaluate expression="tdCountryController.newIfNull(tdCountry)" result="flowScope.tdCountry" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdCountrySubEdit" else="tdCountryEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdCountryEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdCountry.id,tdCountryConverter.print(tdCountry))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdCountryController.save(tdCountry)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdCountryController.saveAndClose(tdCountry)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdCountry)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdCountryController.delete(tdCountry)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdCountrySubEdit" view="tdCountryEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<end-state id="endEdit">
		<output name="tdCountry" value="tdCountry" />
	</end-state>
</flow>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdCity: the entity to edit. If null, then we create it here -->
	<input name="tdCity" required="false" value="flowScope.tdCity"/>	
	<on-start>
		<evaluate expression="tdCityController.newIfNull(tdCity)" result="flowScope.tdCity" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdCitySubEdit" else="tdCityEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdCityEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdCity.id,tdCityConverter.print(tdCity))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdCityController.save(tdCity)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdCityController.saveAndClose(tdCity)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdCity)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdCityController.delete(tdCity)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdCitySubEdit" view="tdCityEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<end-state id="endEdit">
		<output name="tdCity" value="tdCity" />
	</end-state>
</flow>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdTag: the entity to edit. If null, then we create it here -->
	<input name="tdTag" required="false" value="flowScope.tdTag"/>	
	<on-start>
		<evaluate expression="tdTagController.newIfNull(tdTag)" result="flowScope.tdTag" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdTagSubEdit" else="tdTagEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdTagEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdTag.id,tdTagConverter.print(tdTag))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdTagController.save(tdTag)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdTagController.saveAndClose(tdTag)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdTag)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdTagController.delete(tdTag)" />
            <evaluate expression="tdTagController.newIfNull(null)" result="tdTag" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdTagSubEdit" view="tdTagEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<end-state id="endEdit">
		<output name="tdTag" value="tdTag" />
	</end-state>
</flow>
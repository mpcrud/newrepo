<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdVote: the entity to edit. If null, then we create it here -->
	<input name="tdVote" required="false" value="flowScope.tdVote"/>	
	<on-start>
		<evaluate expression="tdVoteController.newIfNull(tdVote)" result="flowScope.tdVote" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdVoteSubEdit" else="tdVoteEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdVoteEdit" parent="#tdVoteEditCommon">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdVote.id,tdVoteConverter.print(tdVote))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdVoteController.save(tdVote)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdVoteController.saveAndClose(tdVote)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdVote)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdVoteController.delete(tdVote)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdVoteSubEdit" view="tdVoteEdit.xhtml" parent="#tdVoteEditCommon">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<!-- COMMON-EDIT -->
	<view-state id="tdVoteEditCommon">

		<!-- user transitions (x-to-one) -->
		<transition on="selectUser" to="selectUser" />
		<transition on="editUser" to="editUser">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewUser" to="editUser">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>

		<!-- topic transitions (x-to-one) -->
		<transition on="selectTopic" to="selectTopic" />
		<transition on="editTopic" to="editTopic">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewTopic" to="editTopic">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
	</view-state>

	<!-- SUBFLOW user (x-to-one) -->
	<subflow-state id="selectUser" subflow="tdUserAuth">
		<input name="sub" value="true" />
		<transition on="tdUserAuthSelected" to="startChoice">
			<evaluate expression="tdVote.setUser(currentEvent.attributes.tdUserAuthSelected)" />
			<evaluate expression="messageUtil.info('status_selected_ok',resourceBundle.tdVote_user)" />
		</transition>
		<transition on="cancel" to="startChoice" />
	</subflow-state>
	<subflow-state id="editUser" subflow="tdUserAuth/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="tdUserAuth" value="tdVote.user" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.tdVote_user)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>


	<!-- SUBFLOW topic (x-to-one) -->
	<subflow-state id="selectTopic" subflow="tdTopic">
		<input name="sub" value="true" />
		<transition on="tdTopicSelected" to="startChoice">
			<evaluate expression="tdVote.setTopic(currentEvent.attributes.tdTopicSelected)" />
			<evaluate expression="messageUtil.info('status_selected_ok',resourceBundle.tdVote_topic)" />
		</transition>
		<transition on="cancel" to="startChoice" />
	</subflow-state>
	<subflow-state id="editTopic" subflow="tdTopic/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="tdTopic" value="tdVote.topic" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.tdVote_topic)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>

	<end-state id="endEdit">
		<output name="tdVote" value="tdVote" />
	</end-state>
</flow>
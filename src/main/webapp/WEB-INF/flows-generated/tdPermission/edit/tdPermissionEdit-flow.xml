			<evaluate expression="tdPermissionController.save(tdPermission)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdPermissionController.saveAndClose(tdPermission)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdPermission)"/>
		</transition>


<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdRole: the entity to edit. If null, then we create it here -->
	<input name="tdRole" required="false" value="flowScope.tdRole"/>	
	<on-start>
		<evaluate expression="tdRoleController.newIfNull(tdRole)" result="flowScope.tdRole" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdRoleSubEdit" else="tdRoleEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdRoleEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdRole.id,tdRoleConverter.print(tdRole))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdRoleController.save(tdRole)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdRoleController.saveAndClose(tdRole)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdRole)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdRoleController.delete(tdRole)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdRoleSubEdit" view="tdRoleEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<end-state id="endEdit">
		<output name="tdRole" value="tdRole" />
	</end-state>
</flow>
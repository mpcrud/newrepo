<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- authUser: the entity to edit. If null, then we create it here -->
	<input name="authUser" required="false" value="flowScope.authUser"/>	
	<on-start>
		<evaluate expression="authUserController.newIfNull(authUser)" result="flowScope.authUser" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="authUserSubEdit" else="authUserEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="authUserEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,authUser.id,authUserConverter.print(authUser))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="authUserController.save(authUser)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="authUserController.saveAndClose(authUser)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,authUser)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="authUserController.delete(authUser)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="authUserSubEdit" view="authUserEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<end-state id="endEdit">
		<output name="authUser" value="authUser" />
	</end-state>
</flow>
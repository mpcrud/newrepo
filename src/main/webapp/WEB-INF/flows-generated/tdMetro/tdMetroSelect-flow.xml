<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract">
	<!-- note: this flow inherits from the 'abstract' flow -->

	<persistence-context />

	<var name="tdMetroLazyDataModel" class="com.app.mpadmin.web.domain.TdMetroLazyDataModel" />

	<decision-state id="selectChoice">
		<if test="create" then="edit" />
		<if test="sub" then="tdMetroSubSelect" else="tdMetroSelect" />
	</decision-state>

	<view-state id="tdMetroSelect">
		<on-entry>
			<evaluate expression="messageUtil.displayDelayedMessages()" />
			<evaluate expression="persistenceContext.clear()" />
		</on-entry>
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,'select')" />
		</on-render>
		<transition on="select" to="checkIfAlreadyOpenFlow" validate="false"/>
		<transition on="delete" validate="false">
			<evaluate expression="tdMetroController.delete(tdMetroLazyDataModel.selectedRow)" />
            <evaluate expression="tdMetroLazyDataModel.clearSelected()"/>
		</transition>
		<transition on="sendNew" to="edit" validate="false" />
	</view-state>

	<view-state id="tdMetroSubSelect" view="tdMetroSelect.xhtml">
		<transition on="select" to="tdMetroSelected" validate="false"/>
	</view-state>

	<decision-state id="checkIfAlreadyOpenFlow">
		<if test="flowsMenuHandler.isFlowAlreadyOpen(flowRequestContext,tdMetroLazyDataModel.selectedRow)" 
			then="endSwitchToAlreadyOpenFlow"
			else="edit" />
	</decision-state>

	<subflow-state id="edit" subflow="tdMetro/edit">
		<input name="tdMetro" value="tdMetroLazyDataModel.selectedRow" />
		<transition on="endEdit" to="quitChoice" >
            <evaluate expression="tdMetroLazyDataModel.clearSelected()"/>
        </transition>
		<transition on="deleteAndClose" to="tdMetroSelect" >
            <evaluate expression="tdMetroLazyDataModel.clearSelected()"/>
        </transition>
	</subflow-state>

	<decision-state id="quitChoice">
		<if test="create" then="quit" else="tdMetroSelect"/>
	</decision-state>

	<end-state id="endSwitchToAlreadyOpenFlow"
		view="externalRedirect:contextRelative:#{flowsMenuHandler.endStateRedirectToAlreadyOpenFlow(flowRequestContext,tdMetroLazyDataModel.selectedRow)}" />

	<end-state id="tdMetroSelected">
		<output name="tdMetroSelected" value="tdMetroLazyDataModel.selectedRow" />
	</end-state>

	<global-transitions>
		<transition on="search">
			<evaluate expression="tdMetroLazyDataModel.onSearch()" />
		</transition>
	</global-transitions>
</flow>
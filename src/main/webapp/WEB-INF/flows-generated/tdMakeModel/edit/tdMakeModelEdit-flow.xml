<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdMakeModel: the entity to edit. If null, then we create it here -->
	<input name="tdMakeModel" required="false" value="flowScope.tdMakeModel"/>	
	<on-start>
		<evaluate expression="tdMakeModelController.newIfNull(tdMakeModel)" result="flowScope.tdMakeModel" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdMakeModelSubEdit" else="tdMakeModelEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdMakeModelEdit" parent="#tdMakeModelEditCommon">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdMakeModel.id,tdMakeModelConverter.print(tdMakeModel))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdMakeModelController.save(tdMakeModel)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdMakeModelController.saveAndClose(tdMakeModel)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdMakeModel)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdMakeModelController.delete(tdMakeModel)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdMakeModelSubEdit" view="tdMakeModelEdit.xhtml" parent="#tdMakeModelEditCommon">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>
	
	
	<!-- COMMON-EDIT -->
	<view-state id="tdMakeModelEditCommon">

		<!-- user transitions (x-to-one) -->
		<transition on="selectMake" to="selectMake" />
		<transition on="editMake" to="editMake">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewMake" to="editMake">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
		
	</view-state>	
	
	<!-- SUBFLOW user (x-to-one) -->
	<subflow-state id="selectMake" subflow="tdMake">
		<input name="sub" value="true" />
		<transition on="tdMakeSelected" to="startChoice">
			<evaluate expression="tdMakeModel.setMake(currentEvent.attributes.tdMakeSelected)" />
			<evaluate expression="messageUtil.info('status_selected_ok',resourceBundle.tdMakeModel_make)" />
		</transition>
		<transition on="cancel" to="startChoice" />
	</subflow-state>
	<subflow-state id="editMake" subflow="tdMake/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="tdMake" value="tdMakeModel.make" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.tdMakeModel_make)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>	


	<end-state id="endEdit">
		<output name="tdMakeModel" value="tdMakeModel" />
	</end-state>

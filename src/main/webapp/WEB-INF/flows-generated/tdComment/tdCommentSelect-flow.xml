<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract">
	<!-- note: this flow inherits from the 'abstract' flow -->

	<persistence-context />

	<var name="tdCommentLazyDataModel" class="com.app.mpadmin.web.domain.TdCommentLazyDataModel" />
    <var name="tdUserAuthLazyDataModel" class="com.app.mpadmin.web.domain.TdUserAuthLazyDataModel" />

	<decision-state id="selectChoice">
		<if test="create" then="edit" />
		<if test="sub" then="tdCommentSubSelect" else="tdCommentSelect" />
	</decision-state>

	<view-state id="tdCommentSelect">
		<on-entry>
			<evaluate expression="messageUtil.displayDelayedMessages()" />
			<evaluate expression="persistenceContext.clear()" />
		</on-entry>
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,'select')" />
		</on-render>
		<transition on="select" to="checkIfAlreadyOpenFlow" validate="false"/>
		<transition on="delete" validate="false">
			<evaluate expression="tdCommentController.delete(tdCommentLazyDataModel.selectedRow)" />
		</transition>
		<transition on="sendNew" to="edit" validate="false" />
        <transition on="viewUser" to="editUser">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
	</view-state>

	<view-state id="tdCommentSubSelect" view="tdCommentSelect.xhtml">
		<transition on="select" to="tdCommentSelected" validate="false"/>
	</view-state>

	<decision-state id="checkIfAlreadyOpenFlow">
		<if test="flowsMenuHandler.isFlowAlreadyOpen(flowRequestContext,tdCommentLazyDataModel.selectedRow)" 
			then="endSwitchToAlreadyOpenFlow"
			else="edit" />
	</decision-state>

	<subflow-state id="edit" subflow="tdComment/edit">
		<input name="tdComment" value="tdCommentLazyDataModel.selectedRow" />
		<transition on="endEdit" to="quitChoice" />
		<transition on="deleteAndClose" to="tdCommentSelect" />
	</subflow-state>

    <subflow-state id="editUser" subflow="tdUserAuth/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="tdUserAuth" value="tdUserAuthLazyDataModel.selectedRow" />
		<transition on="endEdit" to="quitChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.tdComment_user)" />
		</transition>
		<transition on="cancelEdit" to="quitChoice" />
	</subflow-state>

	<decision-state id="quitChoice">
		<if test="create" then="quit" else="tdCommentSelect"/>
	</decision-state>

	<end-state id="endSwitchToAlreadyOpenFlow"
		view="externalRedirect:contextRelative:#{flowsMenuHandler.endStateRedirectToAlreadyOpenFlow(flowRequestContext,tdCommentLazyDataModel.selectedRow)}" />

	<end-state id="tdCommentSelected">
		<output name="tdCommentSelected" value="tdCommentLazyDataModel.selectedRow" />
	</end-state>

	<global-transitions>
		<transition on="search">
			<evaluate expression="tdCommentLazyDataModel.onSearch()" />
		</transition>
	</global-transitions>
</flow>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- tdComment: the entity to edit. If null, then we create it here -->
	<input name="tdComment" required="false" value="flowScope.tdComment"/>	
	<on-start>
		<evaluate expression="tdCommentController.newIfNull(tdComment)" result="flowScope.tdComment" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="tdCommentSubEdit" else="tdCommentEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="tdCommentEdit" parent="#tdCommentEditCommon">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,tdComment.id,tdCommentConverter.print(tdComment))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="tdCommentController.save(tdComment)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="tdCommentController.saveAndClose(tdComment)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,tdComment)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="tdCommentController.delete(tdComment)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="tdCommentSubEdit" view="tdCommentEdit.xhtml" parent="#tdCommentEditCommon">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>
	
	<!-- COMMON-EDIT -->
	<view-state id="tdCommentEditCommon">

		<!-- user transitions (x-to-one) -->
		<transition on="selectUser" to="selectUser" />
		<transition on="editUser" to="editUser">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewUser" to="editUser">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>

		<!-- topic transitions (x-to-one) -->
		<transition on="selectTopic" to="selectTopic" />
		<transition on="editTopic" to="editTopic">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewTopic" to="editTopic">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
	</view-state>
	
	
	<!-- SUBFLOW user (x-to-one) -->
	<subflow-state id="selectUser" subflow="tdUserAuth">
		<input name="sub" value="true" />
		<transition on="tdUserAuthSelected" to="startChoice">
			<evaluate expression="tdComment.setUser(currentEvent.attributes.tdUserAuthSelected)" />
			<evaluate expression="messageUtil.info('status_selected_ok',resourceBundle.tdComment_user)" />
		</transition>
		<transition on="cancel" to="startChoice" />
	</subflow-state>
	<subflow-state id="editUser" subflow="tdUserAuth/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="tdUserAuth" value="tdComment.user" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.tdComment_user)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>
	
	<!--  SUB-FLOW topic -->
	<subflow-state id="selectTopic" subflow="tdTopic">
		<input name="sub" value="true" />
		<transition on="tdTopicSelected" to="startChoice">
			<evaluate expression="tdComment.setTopic(currentEvent.attributes.tdTopicSelected)" />
			<evaluate expression="messageUtil.info('status_selected_ok',resourceBundle.tdComment_topic)" />
		</transition>
		<transition on="cancel" to="startChoice" />
	</subflow-state>
	<subflow-state id="editTopic" subflow="tdTopic/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="tdTopic" value="tdComment.topic" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.tdComment_topic)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>
	

	<end-state id="endEdit">
		<output name="tdComment" value="tdComment" />
	</end-state>
</flow>